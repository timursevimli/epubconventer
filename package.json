{
  "name": "epubconventer",
  "version": "1.0.0",
  "description": "Epub conventer",
  "main": "lib/convert.js",
  "type": "commonjs",
  "engines": {
    "node": "16 || 18 || 20 || 22"
  },
  "scripts": {
    "test": "npm run lint && node --test",
    "lint": "eslint . && prettier --check \"**/*.js\" \"**/*.json\" \"**/*.md\" \"**/.*rc\"",
    "fmt": "prettier --write \"**/*.js\" \"**/*.json\" \"**/*.md\" \"**/.*rc\""
  },
  "bin": {
    "epubconventer": "bin/convert.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/timursevimli/epubconventer.git"
  },
  "keywords": [
    "epub",
    "pdf",
    "convert",
    "node.js"
  ],
  "author": "Timur Sevimli",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/timursevimli/epubconventer/issues"
  },
  "homepage": "https://github.com/timursevimli/epubconventer#readme",
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.3.3"
  },
  "dependencies": {
    "kuyruk": "^0.0.5",
    "slugify": "^1.6.6"
  }
}
